#include <stdio.h>

int main()
{

    int m, n, p;
    printf("This code is written to take a 3-D array from the user.\n");
    printf("Enter the number of 2D array :");
    scanf("%d", &m);
    printf("Enter the number of 1D array :");
    scanf("%d", &n);
    printf("Enter the number of elements in each 1D array :");
    scanf("%d", &p);
    int arr[m][n][p];
    printf("Now enter the elements of your array .\n");

    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {
            for (int k = 0; k < p; k++)
            {
                scanf("%d", &arr[i][j][k]);
            }

        }
    }

    printf("The array you entered is as follows :\n");
    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {

            for (int k = 0; k < p; k++)
            {
                printf("%d\t", arr[i][j][k]);
            }
            printf("\n");
        }
        printf("\n");
    }

    return 0;
}
