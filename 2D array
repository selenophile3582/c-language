#include <stdio.h>

int main()
{

    int m, n;
    printf("This code is written to take a 2-D array from the user.\n");
    printf("Enter the number of 1D array :");
    scanf("%d", &m);
    printf("Enter the number of elements in each 1D array :");
    scanf("%d", &n);
    int arr[m][n];
    printf("Now enter the elements of your array .\n");

    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {
            scanf("%d", &arr[i][j]);
        }
    }

    printf("The array you entered is as follows :\n");
    for (int i = 0; i < m; i++)
    {
        for (int j = 0; j < n; j++)
        {
            printf("%d\t", arr[i][j]);
        }
        printf("\n");
    }

    return 0;
}
